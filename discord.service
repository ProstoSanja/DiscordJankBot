[Unit]
Description=Discord

[Service]
ExecStart=/var/www/DiscordJankBot/bot.sh
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/DiscordJankBot

[Install]
WantedBy=multi-user.target